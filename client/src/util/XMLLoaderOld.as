package rivals.util{		import flash.events.*;	import flash.net.*;	public class XMLLoaderOld extends EventDispatcher{				public var xml : XML ;				public function XMLLoaderOld( inFilePath : String)		{			xml = new XML;						var myXML:XML = new XML();			var XML_URL:String = inFilePath;			var myXMLURL:URLRequest = new URLRequest(XML_URL);			var myLoader:URLLoader = new URLLoader(myXMLURL);			myLoader.addEventListener("complete", xmlLoaded);					}				public function xmlLoaded(event:Event):void		{    		xml = XML(event.currentTarget.data);			dispatchEvent( new Event( Event.COMPLETE ));		}	}	}